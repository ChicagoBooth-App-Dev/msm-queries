<h1>Director #<%= @director.id %> details</h1>

Go <a href = "/directors">back</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @director.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @director.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @director.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src='http://robohash.org/<%= @director.image %>' style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@director.created_at) %> ago
  </dd>
 
  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@director.updated_at) %> ago
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border='1'>

  <% @filmography.each do |movie| %>
    <tr>
      <td><%= movie.id %></td>
      <td><img src='http://robohash.org/<%= movie.image %>?set=set5'></td>
      <td><%= movie.title %></td>
      <td><%= movie.year %></td>
      <td><%= @director.name %></td>
      <td>
        <a href = "/movies/<%= movie.id %>">
        Show details
        </a>
      </td>
    </tr>
  <% end %>

</table>