<h1>Actor #<%= @id %> details</h1>

Go <a href = '/actors'>back</a>

<hr>

<dl>

  <dt>Name</dt>
  <dd><%= @actor.name %></dd>

  <dt>Dob</dt>
  <dd><%= @actor.dob %></dd>

  <dt>Bio</dt>
  <dd><%= @actor.bio %></dd>

  <dt>Image</dt>
  <dd><img src = 'http://robohash.org/<%= @actor.image %>'></dd>

  <dt>Created at</dt>
  <dd><%= time_ago_in_words(@actor.created_at) %> ago</dd>

  <dt>Updated at</dt>
  <dd><%= time_ago_in_words(@actor.updated_at) %> ago</dd>

</dl>

<hr>

<h2>Filmography</h2>

<table border = '1'>

  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th>Character Name</th>
    <th>Details</th>
  </tr>

  <% @appearances.each do |a_film| %>
    <% x = a_film.movie_id %>
    <%= movie = Movie.where({:id => x}).first %>
    <tr>
      <td><%= movie.title %></td>
      <td><%= movie.year %></td>
      <td><%=  %></td>
      <td><%= a_film.name %></td>
      <td><a href = '../movies/<%= x %>'>Show details</a></td>
    </tr>

  <% end %>

</table>

