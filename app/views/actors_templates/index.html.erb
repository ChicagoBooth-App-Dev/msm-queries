<h1>List of all actors</h1>

<hr>

<table border = '1'>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Image</th>
    <th>DOB</th>
    <th>Details</th>
  </tr>

  <% @list_actors.each do |actor| %>

    <tr>
      <td><%= actor.id %></td>
      <td>
        <img src = 'http://robohash.org/<%= actor.image %>'>
      </td>
      <td><%= actor.name %></td>
      <td><%= actor.dob %></td>
      <td><a href = '/actors/<%= actor.id %>'>Show Details</a></td>

    </tr>

  <% end %>
</table>